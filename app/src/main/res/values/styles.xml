<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
		<item name="android:actionBarStyle">@style/customActionBar</item>
    </style>
    
    <style name="customActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_indigo</item>
        <item name="android:titleTextStyle">@style/customTheme.ActionBar.Text</item>
    </style>
    
    <style name="customTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <!-- <item name="android:textSize">20sp</item> -->
    </style>
    
    <style name="tagText">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    
    <style name="tagLightGreen" parent="tagText">
        <item name="android:background">@drawable/bckgr_tag_light_green</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="tagPurple" parent="tagText">
        <item name="android:background">@drawable/bckgr_tag_purple</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="tagLightBlue" parent="tagText">
        <item name="android:background">@drawable/bckgr_tag_light_blue</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="tagBlack" parent="tagText">
        <item name="android:background">@drawable/bckgr_tag_black</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="tagOrange" parent="tagText">
        <item name="android:background">@drawable/bckgr_tag_orange</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="tagDefault" parent="tagText">
        <item name="android:background">@drawable/bckgr_tag_default</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="perCent0">
        <item name="android:textColor">#cccccc</item>
    </style>
    <style name="perCent20">
        <item name="android:textColor">#00cc66</item>
    </style>
    <style name="perCent30">
        <item name="android:textColor">#99ccff</item>
    </style>
    <style name="perCent40">
        <item name="android:textColor">#6699ff</item>
    </style>
    <style name="perCent50">
        <item name="android:textColor">#ff4444</item>
    </style>
    <style name="perCent70">
        <item name="android:textColor">#9933ff</item>
    </style>
</resources>
